# Environment Configuration for Lakukan Drive
# Copy this file to .env and adjust the values

# Application Configuration
NODE_ENV=development
COMPOSE_PROJECT_NAME=lakukan-drive

# GitHub Configuration
GITHUB_REPOSITORY_OWNER=your-username
GITHUB_TOKEN=your-github-token

# Database Configuration
DATABASE_PATH=/database/lakukandrive.db

# File Storage Configuration
DATA_DIR=/srv
CONFIG_DIR=/config
LOG_DIR=/var/log/lakukan-drive

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Backend Configuration
BACKEND_PORT=8080
BACKEND_HOST=0.0.0.0

# Production Configuration (uncomment for production)
# NODE_ENV=production
# FRONTEND_PORT=80
# BACKEND_PORT=8080

# SSL Configuration (uncomment for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External Storage Configuration (optional)
# EXTERNAL_STORAGE_DEVICE=/dev/sdb1
# STORAGE_TYPE=local
# NFS_SERVER=
# NFS_PATH=

# Monitoring Configuration
# MONITORING_ENABLED=true
# HEALTH_CHECK_INTERVAL=30

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_RETENTION_DAYS=7
# BACKUP_SCHEDULE="0 2 * * *"

# Security Configuration
# JWT_SECRET=your-jwt-secret
# SESSION_SECRET=your-session-secret
# CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
# MAX_FILE_SIZE=100MB
# ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Logging Configuration
# LOG_LEVEL=info
# LOG_FORMAT=json

# Performance Configuration
# CACHE_TTL=3600
# COMPRESSION_ENABLED=true